@model FlexTask.Models.TodoTask
@{
    ViewData["Title"] = "Edit Task";
}
<h2 style="text-align:center;">Edit Task</h2>
<form asp-action="Edit" method="post" class="task-form">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedAt" />
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" placeholder="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" placeholder="Description"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" type="date" />
    </div>
    <div class="form-group checkbox-group">
        <label asp-for="IsCompleted" style="margin-bottom:0;">Mark as Completed</label>
        <input asp-for="IsCompleted" type="checkbox" style="margin-left:8px;" />
    </div>
    <div class="form-actions">
        <button type="submit" class="btn">Save</button>
        <a class="btn btn-cancel" href="@Url.Action("Index")">Cancel</a>
    </div>
</form>
@section Styles {
<style>
.task-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 400px;
    margin: 2rem auto;
    background: #f9f9f9;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 1px 4px rgba(0,0,0,0.04);
}
.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
}
</style>
} 