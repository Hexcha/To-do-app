@model FlexTask.Models.TodoTask
@{
    ViewData["Title"] = "Delete Task";
}
<h2 style="text-align:center;">Delete Task</h2>
<div class="delete-confirm">
    <p>Are you sure you want to delete the task titled <strong>@Model.Title</strong>?</p>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-delete">Yes, Delete</button>
        <a class="btn btn-cancel" href="@Url.Action("Index")">Cancel</a>
    </form>
</div>
@section Styles {
<style>
.delete-confirm {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    max-width: 400px;
    margin: 2rem auto;
    background: #f9f9f9;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 1px 4px rgba(0,0,0,0.04);
}
</style>
} 